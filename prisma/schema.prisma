generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String     @unique
  password      String?
  phone         String?
  role          UserRole   @default(USER)
  status        UserStatus @default(ACTIVE)
  image         String?
  emailVerified DateTime?
  lastLoginAt   DateTime?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  bookings      Booking[]
  reviews       Review[]
  accounts      Account[]
  sessions      Session[]
  auditLogs     AuditLog[]   @relation("AuditLogPerformer")
  permissions   UserPermission[]
  notifications Notification[]
  conversations ConversationParticipant[]
  chatMessages  ChatMessage[]
  favorites     Favorite[]
  cartItems     CartItem[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Vehicle {
  id           String        @id @default(cuid())
  name         String
  brand        String
  model        String
  year         Int
  type         VehicleType
  transmission Transmission
  fuelType     FuelType
  seats        Int
  pricePerDay  Decimal       @db.Decimal(10, 2)
  description  String?       @db.Text
  images       String        @db.Text // JSON array of image URLs
  available    Boolean       @default(true)
  featured     Boolean       @default(false)
  location     String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  bookings        Booking[]
  reviews         Review[]
  policies        VehiclePolicy[]
  packages        VehiclePackage[]
  favorites       Favorite[]
  cartItems       CartItem[]
}

model Booking {
  id          String        @id @default(cuid())
  userId      String
  vehicleId   String
  startDate   DateTime
  endDate     DateTime
  totalPrice  Decimal       @db.Decimal(10, 2)
  status      BookingStatus @default(PENDING)
  pickupLocation  String
  dropoffLocation String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // === CONFIRMATION DETAILS ===
  confirmedAt       DateTime?
  confirmedBy       String?        // Admin user ID who confirmed
  advanceAmount     Decimal?       @db.Decimal(10, 2)
  advancePaid       Boolean        @default(false)
  advancePaidAt     DateTime?
  advancePaymentMethod String?     // Cash, Card, Bank Transfer, etc.
  confirmationNotes String?        @db.Text

  // === COLLECTION DETAILS ===
  collectedAt       DateTime?
  collectionOdometer Int?          // Odometer reading at collection
  collectionFuelLevel String?      // Full, 3/4, 1/2, 1/4, Empty
  collectionNotes   String?        @db.Text
  collectedBy       String?        // Admin user ID who processed collection

  // === RETURN/COMPLETION DETAILS ===
  returnedAt        DateTime?
  returnOdometer    Int?           // Odometer reading at return
  returnFuelLevel   String?        // Full, 3/4, 1/2, 1/4, Empty
  returnNotes       String?        @db.Text
  returnedBy        String?        // Admin user ID who processed return

  // === MILEAGE CALCULATION ===
  freeMileage       Int?           // Free mileage allowed (from config or override)
  extraMileageRate  Decimal?       @db.Decimal(10, 2)  // Cost per extra km
  totalMileage      Int?           // Calculated: returnOdometer - collectionOdometer
  extraMileage      Int?           // Calculated: totalMileage - freeMileage (if > 0)
  extraMileageCost  Decimal?       @db.Decimal(10, 2)

  // === ADDITIONAL CHARGES ===
  fuelCharge        Decimal?       @db.Decimal(10, 2)
  damageCharge      Decimal?       @db.Decimal(10, 2)
  lateReturnCharge  Decimal?       @db.Decimal(10, 2)
  otherCharges      Decimal?       @db.Decimal(10, 2)
  otherChargesNote  String?        @db.Text

  // === FINAL AMOUNTS ===
  discountAmount    Decimal?       @db.Decimal(10, 2)
  discountReason    String?
  finalAmount       Decimal?       @db.Decimal(10, 2)  // Total after all calculations
  balanceDue        Decimal?       @db.Decimal(10, 2)  // finalAmount - advanceAmount

  user     User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  vehicle  Vehicle          @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  payment  Payment?
  packages BookingPackage[]
  documents BookingDocument[]
  invoice   Invoice?

  @@index([status])
  @@index([userId])
  @@index([vehicleId])
}

model Payment {
  id            String        @id @default(cuid())
  bookingId     String        @unique
  amount        Decimal       @db.Decimal(10, 2)
  status        PaymentStatus @default(PENDING)
  method        String?
  transactionId String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
}

model Review {
  id        String   @id @default(cuid())
  userId    String
  vehicleId String
  rating    Int
  comment   String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  vehicle Vehicle @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@unique([userId, vehicleId])
}

enum UserRole {
  USER
  MANAGER
  ADMIN
  SUPER_ADMIN
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  BANNED
}

enum VehicleType {
  CAR
  SUV
  VAN
  TRUCK
  MOTORCYCLE
  LUXURY
}

enum Transmission {
  AUTOMATIC
  MANUAL
}

enum FuelType {
  PETROL
  DIESEL
  ELECTRIC
  HYBRID
}

enum BookingStatus {
  PENDING      // Initial status when user creates booking
  CONFIRMED    // Admin confirmed, advance payment collected
  COLLECTED    // User picked up vehicle
  COMPLETED    // User returned vehicle
  INVOICED     // Invoice generated
  PAID         // Payment completed
  CANCELLED    // Booking cancelled
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

// ==================== PACKAGES & POLICIES ====================

// Rental Package Types
enum PackageType {
  DAILY           // Standard daily rental
  WEEKLY          // Weekly rental with discount
  MONTHLY         // Monthly/Long-term rental
  AIRPORT_PICKUP  // Airport pickup service
  AIRPORT_DROP    // Airport drop service
  AIRPORT_ROUND   // Airport round trip (pickup + drop)
  HOURLY          // Hourly rental
  CUSTOM          // Custom package
}

// Package - Dynamic rental options
model Package {
  id           String      @id @default(cuid())
  name         String      // e.g., "Airport Pickup", "Weekly Rental"
  description  String?     @db.Text
  type         PackageType

  // Pricing
  basePrice    Decimal?    @db.Decimal(10, 2)  // Fixed price (for services like airport pickup)
  pricePerDay  Decimal?    @db.Decimal(10, 2)  // Per day rate (for rental packages)
  pricePerHour Decimal?    @db.Decimal(10, 2)  // Per hour rate (for hourly packages)
  discount     Decimal?    @db.Decimal(5, 2)   // Discount percentage (e.g., 10% off for weekly)

  // Duration constraints
  minDuration  Int?        // Minimum duration in hours/days
  maxDuration  Int?        // Maximum duration in hours/days

  // Settings
  isActive     Boolean     @default(true)
  isGlobal     Boolean     @default(true)      // Available for all vehicles if true
  sortOrder    Int         @default(0)         // Display order
  icon         String?     // Icon name or URL

  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  // Relations
  policies         PackagePolicy[]
  vehiclePackages  VehiclePackage[]
  bookings         BookingPackage[]
}

// Policy - Dynamic policies for packages and vehicles
model Policy {
  id           String   @id @default(cuid())
  name         String   // e.g., "Cancellation Policy", "Insurance Policy"
  title        String   // Display title
  content      String   @db.Text  // Full policy content (can be HTML/Markdown)
  summary      String?  @db.Text  // Short summary for quick view

  // Categorization
  category     String   // e.g., "cancellation", "insurance", "fuel", "damage", "general"

  // Settings
  isActive     Boolean  @default(true)
  isRequired   Boolean  @default(false)  // Must be accepted before booking
  sortOrder    Int      @default(0)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  packagePolicies  PackagePolicy[]
  vehiclePolicies  VehiclePolicy[]
}

// Junction: Package <-> Policy
model PackagePolicy {
  id           String   @id @default(cuid())
  packageId    String
  policyId     String
  createdAt    DateTime @default(now())

  package  Package @relation(fields: [packageId], references: [id], onDelete: Cascade)
  policy   Policy  @relation(fields: [policyId], references: [id], onDelete: Cascade)

  @@unique([packageId, policyId])
}

// Junction: Vehicle <-> Policy
model VehiclePolicy {
  id           String   @id @default(cuid())
  vehicleId    String
  policyId     String
  createdAt    DateTime @default(now())

  vehicle  Vehicle @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  policy   Policy  @relation(fields: [policyId], references: [id], onDelete: Cascade)

  @@unique([vehicleId, policyId])
}

// Junction: Vehicle <-> Package (for non-global packages)
model VehiclePackage {
  id           String   @id @default(cuid())
  vehicleId    String
  packageId    String

  // Override pricing for specific vehicle
  customPrice  Decimal? @db.Decimal(10, 2)

  createdAt    DateTime @default(now())

  vehicle  Vehicle @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  package  Package @relation(fields: [packageId], references: [id], onDelete: Cascade)

  @@unique([vehicleId, packageId])
}

// Junction: Booking <-> Package (selected packages for a booking)
model BookingPackage {
  id           String   @id @default(cuid())
  bookingId    String
  packageId    String
  quantity     Int      @default(1)
  price        Decimal  @db.Decimal(10, 2)  // Price at time of booking

  createdAt    DateTime @default(now())

  booking  Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  package  Package @relation(fields: [packageId], references: [id], onDelete: Cascade)

  @@unique([bookingId, packageId])
}

// Permission Management Models
model Permission {
  id          String   @id @default(cuid())
  name        String   @unique  // e.g., "users:read", "vehicles:create"
  description String?
  resource    String   // e.g., "users", "vehicles", "bookings"
  action      String   // e.g., "create", "read", "update", "delete"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  rolePermissions RolePermission[]
  userPermissions UserPermission[]
}

model RolePermission {
  id           String     @id @default(cuid())
  role         UserRole
  permissionId String
  createdAt    DateTime   @default(now())

  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([role, permissionId])
}

model UserPermission {
  id           String   @id @default(cuid())
  userId       String
  permissionId String
  granted      Boolean  @default(true)  // false = explicitly denied
  createdAt    DateTime @default(now())

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([userId, permissionId])
}

// Audit Logging
model AuditLog {
  id          String   @id @default(cuid())
  userId      String
  action      String   // e.g., "user.create", "user.update", "user.delete"
  resource    String   // e.g., "User", "Vehicle", "Booking"
  resourceId  String?  // ID of the affected resource
  details     String?  @db.Text  // JSON string with additional details
  ipAddress   String?
  userAgent   String?  @db.Text
  createdAt   DateTime @default(now())

  user User @relation("AuditLogPerformer", fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([resource, resourceId])
  @@index([createdAt])
}

// ==================== NOTIFICATIONS ====================

enum NotificationType {
  BOOKING_CREATED
  BOOKING_CONFIRMED
  BOOKING_CANCELLED
  BOOKING_REMINDER
  PAYMENT_SUCCESS
  PAYMENT_FAILED
  REVIEW_RECEIVED
  PROMOTION
  SYSTEM
  CHAT_MESSAGE
}

model Notification {
  id          String           @id @default(cuid())
  userId      String
  type        NotificationType
  title       String
  message     String           @db.Text
  data        String?          @db.Text  // JSON string with additional data (e.g., bookingId, vehicleId)
  read        Boolean          @default(false)
  readAt      DateTime?
  createdAt   DateTime         @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, read])
  @@index([createdAt])
}

// ==================== LIVE CHAT ====================

model Conversation {
  id           String    @id @default(cuid())
  title        String?   // Optional title for the conversation
  type         ConversationType @default(SUPPORT)
  status       ConversationStatus @default(OPEN)

  // For support chats - link to booking if relevant
  bookingId    String?

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  closedAt     DateTime?

  participants ConversationParticipant[]
  messages     ChatMessage[]

  @@index([status])
  @@index([createdAt])
}

enum ConversationType {
  SUPPORT       // Customer support chat
  BOOKING       // Chat about a specific booking
  GENERAL       // General inquiry
}

enum ConversationStatus {
  OPEN
  WAITING       // Waiting for customer/admin response
  RESOLVED
  CLOSED
}

model ConversationParticipant {
  id             String   @id @default(cuid())
  conversationId String
  userId         String
  role           ParticipantRole @default(CUSTOMER)
  joinedAt       DateTime @default(now())
  lastReadAt     DateTime?

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([conversationId, userId])
  @@index([userId])
}

enum ParticipantRole {
  CUSTOMER
  SUPPORT
  ADMIN
}

model ChatMessage {
  id             String   @id @default(cuid())
  conversationId String
  senderId       String
  content        String   @db.Text
  type           MessageType @default(TEXT)
  metadata       String?  @db.Text  // JSON for file info, etc.

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  deletedAt      DateTime?

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender       User         @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
  @@index([senderId])
}

enum MessageType {
  TEXT
  IMAGE
  FILE
  SYSTEM    // System messages like "User joined", "Conversation closed"
}

// ==================== FAVORITES ====================

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  vehicleId String
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  vehicle Vehicle @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@unique([userId, vehicleId])
  @@index([userId])
  @@index([vehicleId])
}

// ==================== CART ====================

model CartItem {
  id        String   @id @default(cuid())
  userId    String
  vehicleId String
  startDate DateTime
  endDate   DateTime
  pickupLocation  String
  dropoffLocation String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  vehicle Vehicle @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@unique([userId, vehicleId])
  @@index([userId])
}

// ==================== BOOKING DOCUMENTS ====================

enum DocumentType {
  ID_CARD           // National ID / Passport
  DRIVING_LICENSE   // Driving license
  PROOF_OF_ADDRESS  // Utility bill, bank statement, etc.
  VEHICLE_PHOTO     // Photo of vehicle at collection/return
  DAMAGE_PHOTO      // Photo of any damage
  ODOMETER_PHOTO    // Photo of odometer reading
  SIGNATURE         // Customer signature
  CONTRACT          // Rental agreement/contract
  OTHER             // Any other document
}

enum DocumentStage {
  CONFIRMATION      // Documents collected at booking confirmation
  COLLECTION        // Documents collected at vehicle pickup
  RETURN            // Documents collected at vehicle return
}

model BookingDocument {
  id          String        @id @default(cuid())
  bookingId   String
  type        DocumentType
  stage       DocumentStage @default(CONFIRMATION)
  title       String        // e.g., "Front of ID Card", "Driver License"
  description String?       @db.Text
  fileUrl     String        @db.Text  // URL to uploaded file
  fileName    String        // Original file name
  fileSize    Int?          // File size in bytes
  mimeType    String?       // e.g., "image/jpeg", "application/pdf"
  uploadedBy  String        // Admin user ID who uploaded
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@index([bookingId])
  @@index([type])
  @@index([stage])
}

// ==================== INVOICES ====================

enum InvoiceStatus {
  DRAFT             // Invoice created but not finalized
  ISSUED            // Invoice issued to customer
  PARTIALLY_PAID    // Some payment received
  PAID              // Fully paid
  OVERDUE           // Payment overdue
  CANCELLED         // Invoice cancelled
}

model Invoice {
  id              String        @id @default(cuid())
  bookingId       String        @unique
  invoiceNumber   String        @unique  // e.g., INV-2024-001234
  status          InvoiceStatus @default(DRAFT)

  // === RENTAL DETAILS ===
  rentalStartDate DateTime?     // Actual collection date (when vehicle handed over)
  rentalEndDate   DateTime?     // Actual return date (when vehicle returned)
  rentalDays      Int
  dailyRate       Decimal       @db.Decimal(10, 2)
  rentalAmount    Decimal       @db.Decimal(10, 2)

  // === MILEAGE DETAILS ===
  collectionOdometer Int?
  returnOdometer     Int?
  totalMileage       Int?
  freeMileage        Int?
  extraMileage       Int?
  extraMileageRate   Decimal?    @db.Decimal(10, 2)
  extraMileageCost   Decimal?    @db.Decimal(10, 2)

  // === ADDITIONAL CHARGES ===
  packageCharges   Decimal?     @db.Decimal(10, 2)
  fuelCharge       Decimal?     @db.Decimal(10, 2)
  damageCharge     Decimal?     @db.Decimal(10, 2)
  lateReturnCharge Decimal?     @db.Decimal(10, 2)
  otherCharges     Decimal?     @db.Decimal(10, 2)
  otherChargesDesc String?      @db.Text

  // === TOTALS ===
  subtotal         Decimal      @db.Decimal(10, 2)
  discountAmount   Decimal?     @db.Decimal(10, 2)
  discountReason   String?
  taxRate          Decimal?     @db.Decimal(5, 2)  // Tax percentage
  taxAmount        Decimal?     @db.Decimal(10, 2)
  totalAmount      Decimal      @db.Decimal(10, 2)

  // === PAYMENTS ===
  advancePaid      Decimal?     @db.Decimal(10, 2)
  balanceDue       Decimal      @db.Decimal(10, 2)
  amountPaid       Decimal      @default(0) @db.Decimal(10, 2)

  // === DATES ===
  issuedAt         DateTime?
  dueDate          DateTime?
  paidAt           DateTime?

  // === NOTES ===
  notes            String?      @db.Text
  termsAndConditions String?    @db.Text

  // === SENDING ===
  sentViaEmail     Boolean      @default(false)
  emailSentAt      DateTime?
  sentViaWhatsApp  Boolean      @default(false)
  whatsAppSentAt   DateTime?

  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  createdBy        String?      // Admin user ID who created

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  payments InvoicePayment[]

  @@index([status])
  @@index([invoiceNumber])
}

model InvoicePayment {
  id            String        @id @default(cuid())
  invoiceId     String
  amount        Decimal       @db.Decimal(10, 2)
  method        String        // Cash, Card, Bank Transfer, Online, etc.
  reference     String?       // Transaction reference number
  notes         String?       @db.Text
  receivedBy    String?       // Admin user ID who received payment
  paidAt        DateTime      @default(now())
  createdAt     DateTime      @default(now())

  invoice Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  @@index([invoiceId])
}
